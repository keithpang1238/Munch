<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchMovieProviderFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Which streaming services do you use?"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/providerText">
        </TextView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/providerText"
            android:id="@+id/providerScrollView"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="100dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/providerLayout"
                android:orientation="vertical"
                />

        </ScrollView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/providerScrollView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-80dp"
            android:text="Next"
            android:id="@+id/providerNextBtn"/>

    </RelativeLayout>

</FrameLayout>