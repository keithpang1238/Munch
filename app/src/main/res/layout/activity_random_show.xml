<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RandomShowActivity"
    android:id="@+id/randomShowLayout">

    <ProgressBar
        android:id="@+id/loadingShowFetchBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />

    <FrameLayout
        android:id="@+id/random_movie_content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gimme another"
        android:layout_below="@id/random_movie_content_frame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-70dp"
        android:id="@+id/getNextRandom">

    </Button>

</RelativeLayout>